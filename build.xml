<?xml version="1.0" encoding="UTF-8"?>
<project name="template" default="autobuild" basedir="autobuild">
    <import file="build.xml"/>

	<target name="autobuild-own">
		<if>
			<equals arg1="${external.animatecss}" arg2="1" />
			<then>
				<exec command="grunt shackslides" dir="../external/animatecss" logoutput="true" />
			</then>
		</if>

		<if>
			<equals arg1="${external.owlcarousel2}" arg2="1" />
			<then>
				<exec command="grunt shackslides" dir="../external/owlcarousel2" logoutput="true" />
			</then>
		</if>
	</target>
</project>